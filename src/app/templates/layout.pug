include ../../widgets/index
include ../../shared/index

block vars

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title=title
    link(rel="stylesheet", href="assets/css/main.min.css")

    block head
  body
    .page
      //- Шапка
      if (!hoHeader)
        +page-header

      //- Основное содержимое
      main.page__main
        block body
      
      //- Футер
      if (!noFooter)
        +page-footer
      
      //- Модальные окна
      block modals

    //- Скрипты 
    script(src="assets/js/main.min.js") 
    block scripts